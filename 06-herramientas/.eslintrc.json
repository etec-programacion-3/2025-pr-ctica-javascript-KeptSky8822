{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "no-console": "warn",     // ⛔ Te avisa si usás console.log
    "eqeqeq": "error"         // ⛔ Obliga a usar === en vez de ==
  }
} 